<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullInfoActivity">


    <ImageView
        android:id="@+id/full_info_l_chosen_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_star_32"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/full_info_l_choose_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_star_border_32"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/full_info_l_word_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/full_info_l_chosen_img"
        app:layout_constraintHorizontal_bias=".0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/be" />


    <TextView
        android:id="@+id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="v1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/full_info_l_word_text"
        app:layout_constraintTop_toBottomOf="@id/full_info_l_word_text" />

    <TextView
        android:id="@+id/v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="v2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/full_info_l_word_text"
        app:layout_constraintTop_toBottomOf="@id/v1" />

    <TextView
        android:id="@+id/v3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="v3"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/full_info_l_word_text"
        app:layout_constraintTop_toBottomOf="@id/v2" />


    <TextView
        android:id="@+id/full_info_l_v1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="@id/v1"
        app:layout_constraintStart_toEndOf="@id/v1"
        tools:text="@string/be" />


    <TextView
        android:id="@+id/full_info_l_v2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        app:layout_constraintStart_toEndOf="@id/v2"
        tools:text="@string/be" />

    <TextView
        android:id="@+id/full_info_l_v3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="@id/v3"
        app:layout_constraintStart_toEndOf="@id/v3"
        tools:text="@string/be" />


    <TextView
        android:id="@+id/full_info_l_v1_pron_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:textColor="#E6878A8E"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/full_info_l_v1_text"
        app:layout_constraintStart_toEndOf="@+id/full_info_l_v1_text"
        tools:text="[ been ]" />

    <TextView
        android:id="@+id/full_info_l_v2_pron_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:textColor="#E6878A8E"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/v2"
        app:layout_constraintStart_toEndOf="@id/full_info_l_v2_text"
        tools:text="@string/be" />

    <TextView
        android:id="@+id/full_info_l_v3_pron_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:textColor="#E6878A8E"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/full_info_l_v3_text"
        app:layout_constraintStart_toEndOf="@id/full_info_l_v3_text"
        tools:text="@string/email_address" />

    <TextView
        android:id="@+id/full_info_l_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/v3"
        tools:text="@string/email_address" />


</androidx.constraintlayout.widget.ConstraintLayout>